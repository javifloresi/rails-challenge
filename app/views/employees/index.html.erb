<div class="container mx-auto p-4">
  <div class="flex justify-center">
    <%= link_to 'Fetch more employees', fetch_employees_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mb-4 inline-block' %>
  </div>
    <div class="max-w-3xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-4xl font-bold text-center text-gray-800 md:text-3xl lg:text-5xl p-4">Employees List (<%=@employees.count%>)</h1>
    <ul role="list" class="divide-y divide-gray-100">
      <% @employees.each_with_index do |employee, index| %>
        <li class="flex justify-between gap-x-6 py-5 <%= index.even? ? 'bg-gray-100' : 'bg-gray-200' %>">
          <div class="flex min-w-0 gap-x-4 p-4">
            <img class="h-12 w-12 flex-none rounded-full bg-gray-50" src="https://place-hold.it/100" alt="">
            <div class="min-w-0 flex-auto">
              <p class="text-sm font-semibold leading-6 text-gray-900"><%= index+1 %>. <%= employee.first_name %> <%= employee.last_name %></p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><a href="mailto:<%= employee.email %>"><%= employee.email %></a></p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><strong>Date of Birth:</strong> <%= employee.date_of_birth %></p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><strong>Address:</strong> <%= employee.address %></p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><strong>Country:</strong> <%= employee.country %></p>
              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><strong>Rating:</strong> <%= employee.rating %></p>

              <p class="mt-1 truncate text-xs leading-5 text-gray-500"><strong>Bio:</strong> 
              <% JSON.parse(employee.bio).each do |line| %>
                  <%=line%><br>
              <% end %>
              
              </p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
